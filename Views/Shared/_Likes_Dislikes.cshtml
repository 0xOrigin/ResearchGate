@model Research_Gate.Models.Paper

@{
    bool IsLiked = false;
    bool IsDisLiked = false;
    if (Session["id"] != null)
    {
        IsLiked = Model.Like.Count(author => author.Author_id == (int)Session["id"]) > 0;
        IsDisLiked = Model.Dislike.Count(author => author.Author_id == (int)Session["id"]) > 0;
    }
}

<div class="like-actions">
    <div class="like-button" id="like-button">
        <div class="button-style">
            <i id="like-symbol" class="fa fa-thumbs-up" style="color: @(IsLiked ? "blue" : "black");"></i>
        </div>
        <span class="number-of">@Model.Like.Count</span>
    </div>

    <div class="dislike-button" id="dislike-button">
        <div class="button-style">
            <i id="dislike-symbol" class="fa fa-thumbs-down" style="color: @(IsDisLiked ? "blue" : "black");"></i>
        </div>
        <span class="number-of">@Model.Dislike.Count</span>
    </div>
</div>